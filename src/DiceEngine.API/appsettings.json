{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;Database=dice_engine;User Id=dice_user;Password=dice_pass_secure;"
  },
  "AllowedHosts": "*",
  "DiceEngine": {
    "MaxDiceCount": 100,
    "MaxSidesPerDie": 1000,
    "MaxModifier": 1000
  },
  "Quest": {
    "MaxConcurrentActiveQuests": 10,
    "MaxQuestStages": 20,
    "EnableDependencyValidation": true,
    "CacheDependencyGraphInMemory": true
  }
}