# ============================================================================
# Adventure Dashboard Environment Configuration
# ============================================================================

# BACKEND API CONFIGURATION
# ============================================================================

# URL of the backend API server
# Default: http://localhost:5000 (development)
# Production: https://api.example.com
VITE_API_URL=http://localhost:5000

# JWT token for authentication (if using token-based auth)
# Set this if the API requires a static token for testing
# In production, tokens are typically stored in localStorage after login
VITE_AUTH_TOKEN=

# ============================================================================
# FEATURE FLAGS & DEBUG OPTIONS
# ============================================================================

# Enable detailed API request/response logging in browser console
# When true: logs all fetch calls, responses, and errors
# Default: false (production), true (development)
VITE_DEBUG_API=false

# Enable mock API mode (if Mock Service Worker is configured)
# When true: intercepts API calls and uses mock data instead of real backend
# Useful for frontend-only development without running backend
# Default: false
VITE_MOCK_API=false

# Enable verbose TypeScript type validation during development
# When true: logs type checking warnings to console
# Default: false
VITE_DEBUG_TYPES=false

# ============================================================================
# PERFORMANCE & OPTIMIZATION
# ============================================================================

# Enable React Query DevTools in production builds
# Warning: DevTools add ~40KB to bundle, only enable for debugging
# Default: false
VITE_ENABLE_QUERY_DEVTOOLS=false

# API cache duration in milliseconds (staleTime for TanStack Query)
# How long data is considered "fresh" before background refetch
# Default: 300000 (5 minutes)
VITE_API_CACHE_DURATION=300000

# API retry attempts for failed requests
# Number of times to retry a failed API call
# Default: 3
VITE_API_RETRY_ATTEMPTS=3

# Request timeout in milliseconds
# How long to wait for API response before timing out
# Default: 30000 (30 seconds)
VITE_API_TIMEOUT=30000

# ============================================================================
# ANALYTICS & MONITORING (Optional)
# ============================================================================

# Sentry DSN for error tracking (if using Sentry)
# Leave blank to disable error reporting
VITE_SENTRY_DSN=

# Google Analytics tracking ID (if using GA)
# Leave blank to disable analytics
VITE_GA_TRACKING_ID=

# ============================================================================
# APPLICATION BEHAVIOR
# ============================================================================

# Enable dark mode by default
# When true: dashboard starts in dark mode
# Default: false (light mode)
VITE_DARK_MODE_DEFAULT=false

# Enable accessibility features (increased contrast, larger fonts)
# When true: applies WCAG AAA styling by default
# Default: false (standard WCAG AA)
VITE_ACCESSIBILITY_ENHANCED=false

# Pagination size for adventure list (adventures per page)
# Must be between 10 and 100
# Default: 20
VITE_PAGE_SIZE=20

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================

# Application environment (development, staging, production)
# Used for conditional behavior and error reporting
# Default: development
VITE_ENV=development

# Application version (for display and cache busting)
# Set automatically by CI/CD pipeline
VITE_APP_VERSION=1.0.0

# ============================================================================
# NOTES
# ============================================================================
# 
# • Copy this file to .env.local and customize for your environment
# • Never commit .env.local to version control (add to .gitignore)
# • Prefix all variables with VITE_ to expose them to the frontend bundle
# • Variables without VITE_ prefix are backend-only and not included in bundle
#
# SECURITY WARNING:
# • Do NOT store sensitive credentials (passwords, API keys) in .env files
# • Use environment variable management services (AWS Secrets Manager, etc.)
# • For authentication tokens, rely on secure HTTP-only cookies or localStorage
#

